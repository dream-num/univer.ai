---
import { getLangFromUrl, useI18nUrl, useTranslations } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const l = useI18nUrl(lang)
---

<section class="hero">
  <h2 class="title">
    <span>{t('hero.title')}</span>
  </h2>

  <p class="desc">{t('hero.description')}</p>

  <a class="btn" href={l('/guides/introduction')}>{t('hero.button')}</a>

  <section class="materials">
    <div class="center">
      <img class="material shadow-left-top" src="/materials/shadow-left-top.svg" draggable={false} />
      <img class="material shadow-left-bottom" src="/materials/shadow-left-bottom.svg" draggable={false} />
      <img class="material shadow-right-top" src="/materials/shadow-right-top.svg" draggable={false} />
      <img class="material shadow-right-bottom" src="/materials/shadow-right-bottom.svg" draggable={false} />

      <img class="material polygon-left" src="/materials/polygon-left.svg" draggable={false} />
      <img class="material polygon-right" src="/materials/polygon-right.svg" draggable={false} />

      <div class="material dot dot-1" />
      <div class="material dot dot-2" />
      <div class="material dot dot-3" />
      <div class="material dot dot-4" />
      <div class="material dot dot-5" />
      <div class="material dot dot-6" />
      <div class="material dot dot-7" />
      <div class="material dot dot-8" />
      <div class="material dot dot-9" />

      <img class="sheets" src={`/images/${lang}/hero.png`} alt="univer sheets" draggable={false} />
    </div>
  </section>
</section>

<style lang="less" scoped>
.hero {
  margin-top: 3.875rem;
  padding-bottom: 14.15rem;
  overflow-x: hidden;
  @media (max-width: 1024px) {
    padding-bottom: 5rem;
  }

  .title {
    max-width: 50.625rem;
    margin: 0 auto 1.2rem;
    text-align: center;
    line-height: 4.25rem;
    display: flex;
    justify-content: center;
    user-select: none;

    span {
      font-size: 3.3rem;
      font-weight: 600;
      background: linear-gradient(121deg, #0048FF 18.89%, #0C81ED 39.58%, #029DCE 59.87%, #00BBB0 74.37%, #00C5A8 79.64%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      display: block;
      @media (max-width: 1024px) {
        padding: 0 48px;
        font-size: 1.375rem;
        line-height: 28px;
      }
    }
  }

  .desc {
    margin: 0 0 1.6rem;
    color: #999;
    text-align: center;
    font-size: 1.1rem;
    @media (max-width: 1024px) {
      padding: 0 48px;
      color: #868686;
      font-size: 0.875rem;
      line-height: 18px;
    }
  }

  .btn {
    width: 12rem;
    height: 3.3rem;
    margin: 0 auto 3.125rem auto;
    color: #fff;
    text-align: center;
    line-height: 3.3rem;
    font-size: 1.2rem;
    font-weight: 500;
    text-decoration: none;
    background: #274FEE;
    border-radius: 8px;
    box-shadow: 0px 4px 12px 0px rgba(11, 0, 208, 0.25);
    display: block;
    transition: all .15s;
    @media (max-width: 1024px) {
      width: 7.25rem;
      height: 2.25rem;
      line-height: 2.25rem;
      font-size: 0.875rem;
    }
    &:hover {
      background: #3A60F7;
    }
  }

  .materials {
    position: relative;

    .center {
      position: relative;
      width: 47rem;
      margin: 0 auto;
      @media (max-width: 1024px) {
        width: calc(100% - 4.75rem);
      }
    }

    .sheets {
      position: relative;
      width: 100%;
      border-radius: 12px;
      box-shadow: 0px 8px 24px 0px #1F23271F;
      display: block;
      z-index: 0;
    }

    .material {
      position: absolute;

      &.shadow {
        &-left {
          &-top {
            top: -5.65rem;
            left: 2rem;
            width: 5.8rem;
            height: 20.1rem;
            transform: rotate(-93deg);
            background: rgba(39, 79, 238, 0.50);
            border-radius: 20.1rem;
            filter: blur(100px);
            @media (max-width: 1024px) {
              top: -1.3rem;
              left: 1.5rem;
              width: 1.75rem;
              height: 6.125rem;
              filter: blur(25px);
            }
          }

          &-bottom {
            top: 16.65rem;
            left: 1.3rem;
            width: 3.25rem;
            height: 13rem;
            transform: rotate(-58deg);
            background: rgba(16, 232, 199, 0.50);
            border-radius: 13rem;
            filter: blur(100px);
            @media (max-width: 1024px) {
              top: unset;
              bottom: -1rem;
              left: 0.5rem;
              width: 1rem;
              height: 3.9375rem;
              filter: blur(25px);
            }
          }
        }

        &-right {
          &-top {
            top: 3rem;
            right: -1rem;
            width: 7.65rem;
            height: 7.1rem;
            background: rgba(11, 158, 251, 0.50);
            filter: blur(100px);
            transform: rotate(-5deg);
            @media (max-width: 1024px) {
              top: 0.5rem;
              left: 12.5rem;
              width: 2.3125rem;
              height: 2.1875rem;
              filter: blur(25px);
            }
          }

          &-bottom {
            bottom: 0.5rem;
            right: 2rem;
            width: 7.65rem;
            height: 7.1rem;
            transform: rotate(-5deg);
            background: rgba(254, 75, 75, 0.50);
            filter: blur(100px);
            @media (max-width: 1024px) {
              right: -0.5rem;
              bottom: -1rem;
              width: 2.3125rem;
              height: 2.125rem;
              filter: blur(25px);
            }
          }
        }
      }

      &.polygon {
        &-left {
          top: -3rem;
          left: -4rem;
          width: 10.55rem;
          @media (max-width: 1024px) {
            top: -1rem;
            left: -1rem;
            width: 2.125rem;
          }
        }

        &-right {
          right: -4rem;
          bottom: -3rem;
          width: 18.05rem;
          @media (max-width: 1024px) {
            right: -1.3rem;
            bottom: -1rem;
            width: 3.8125rem;
          }
        }
      }

      &.dot {
        border-radius: 50%;

        &-1 {
          top: 4rem;
          left: -23.6rem;
          width: 2rem;
          height: 2rem;
          background: #ffbd37;
          @media (max-width: 1024px) {
            top: 36%;
            left: -8%;
            width: 0.5rem;
            height: 0.5rem;
          }
        }

        &-2 {
          top: -7.4rem;
          left: -7.5rem;
          width: 1rem;
          height: 1rem;
          background: #2DAEFF;
          @media (max-width: 1024px) {
            top: 24%;
            left: -3%;
            width: 0.3rem;
            height: 0.3rem;
          }
        }

        &-3 {
          bottom: 6rem;
          left: -4.3rem;
          width: 0.8rem;
          height: 0.8rem;
          background: #FE4B4B;
          @media (max-width: 1024px) {
            bottom: 28%;
            left: -2%;
            width: 0.2rem;
            height: 0.2rem;
          }
        }

        &-4 {
          bottom: -9rem;
          left: -9.85rem;
          width: 2.2rem;
          height: 2.2rem;
          background: #274FEE;
          @media (max-width: 1024px) {
            bottom: -10%;
            left: 4%;
            width: 0.5rem;
            height: 0.5rem;
          }
        }

        &-5 {
          left: 15.65rem;
          top: 24rem;
          width: 1rem;
          height: 1rem;
          background: #FF8C51;
          @media (max-width: 1024px) {
            left: 42%;
            top: 102%;
            width: 0.5rem;
            height: 0.5rem;
          }
        }

        &-6 {
          right: -2rem;
          bottom: 13rem;
          width: 1rem;
          height: 1rem;
          background: #274FEE;
          @media (max-width: 1024px) {
            right: -0.75rem;
            bottom: 12%;
            width: 0.25rem;
            height: 0.25rem;
          }
        }

        &-7 {
          right: -3rem;
          bottom: -6rem;
          width: 1.3rem;
          height: 1.3rem;
          background: #2DAEFF;
          @media (max-width: 1024px) {
            right: 2%;
            bottom: -1.75rem;
            width: 0.3125rem;
            height: 0.3125rem;
          }
        }

        &-8 {
          top: -11.5rem;
          right: -13rem;
          width: 1.4rem;
          height: 1.4rem;
          background: #D0EDFF;
          @media (max-width: 1024px) {
            top: 0;
            right: -1rem;
            width: 0.3125rem;
            height: 0.3125rem;
          }
        }

        &-9 {
          top: 2.2rem;
          right: -20rem;
          width: 0.6rem;
          height: 0.6rem;
          background: #FE4B4B;
          @media (max-width: 1024px) {
            top: 40%;
            right: -2rem;
            width: 0.2rem;
            height: 0.2rem;
          }
        }
      }
    }
  }
}
</style>

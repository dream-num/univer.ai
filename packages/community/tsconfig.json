{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "experimentalDecorators": true,

    "baseUrl": ".",

    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "./api"
  ]
}

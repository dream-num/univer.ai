---
import * as Post from './_blog.md'
import Footer from '@/components/Workspace/Footer.astro'
import Header from '@/components/Workspace/Header.astro'
import BlankLayout from '@/layouts/BlankLayout.astro'

const { frontmatter, Content } = Post

const headings = Post.getHeadings()
---

<BlankLayout lang="en-us" title="Univer Workspace | Univer">
  <link rel="stylesheet" href="//fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" />

  <section class="page">
    <Header />

    <header class="header">
      <div class="materials">
        <div />
        <div />
        <div />
      </div>

      <h1>{frontmatter.title}</h1>
      <p>{frontmatter.description}</p>

      <section class="video">
        <div class="video-container">
          <iframe
            src={frontmatter.video}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          />
        </div>
      </section>
    </header>

    <section class="post">
      <aside class="toc">
        <section class="container">
          <label>Contents</label>
          {headings.length > 0 && (
            <ul>
              {headings.map(({ depth, slug, text }) => depth < 3 && (
                <li>
                  <a href={`#${slug}`}>{text}</a>
                </li>
              ))}
            </ul>
          )}
        </section>
      </aside>

      <article class="content">
        <Content />
      </article>
    </section>

    <Footer />
  </section>
</BlankLayout>

<script>
const $headings = document.querySelectorAll('.toc .container ul a')

const ids = Array.from($headings).map(($a: any) => decodeURIComponent($a.href.split('#')[1]))

const $titles = ids.map(id => document.getElementById(id))

window.addEventListener('scroll', () => {
  const scrollPosition = window.scrollY + 72;

  $titles.forEach((heading, index) => {
    const headingPosition = heading?.offsetTop ?? 0;

    if (scrollPosition >= headingPosition) {
      $headings.forEach((link) => link.classList.remove('active'));
      $headings[index].classList.add('active');
    }
  });
});
</script>

<style lang="less">
.page {
  font-family: Poppins;

  .header {
    position: relative;
    max-width: 1440px;
    margin: 0 auto 72px auto;
    padding: 72px 78px 0;
    @media (max-width: 1024px) {
      padding: 72px 20px 0;
    }

    .materials {
      position: absolute;
      top: -68px;
      left: 0;
      width: 100%;
      display: flex;
      justify-content: center;
      gap: 100px;

      > div {
        filter: blur(150px);

        &:nth-child(1),
        &:nth-child(2),
        &:nth-child(3) {
          width: 200px;
          height: 120px;
        }
        &:nth-child(1) {
          background: #D5FFF7;
        }
        &:nth-child(2) {
          background: #D1EDFF;
        }
        &:nth-child(3) {
          background: #CCD8FF;
        }
      }
    }

    h1 {
      margin: 0 0 32px;
      color: #0F172A;
      text-align: center;
      font-size: 56px;
      font-style: italic;
      font-weight: 600;
      line-height: 56px;
      letter-spacing: 0.56px;
      @media (max-width: 1024px) {
        font-size: 44px;
        letter-spacing: 0.44px;
      }
    }

    p {
      width: 758px;
      margin: 0 auto 48px auto;
      color: #0F172A;
      text-align: center;
      font-family: Poppins;
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 36px;
      @media (max-width: 1024px) {
        width: 100%;
      }
    }

    .video {
      width: 100%;
      padding: 8px;
      background: #F0F3FF;
      border-radius: 16px;

      .video-container {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;

        iframe {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          border-radius: 16px;
        }
      }
    }
  }

  .post {
    max-width: 1440px;
    margin: 0 auto 72px auto;
    padding: 0 78px;
    display: grid;
    grid-template-columns: 192px 1fr 192px;
    @media (max-width: 1024px) {
      padding: 0;
      display: block;
    }

    .toc {
      @media (max-width: 1024px) {
        display: none;
      }

      .container {
        position: sticky;
        top: 140px;

        label {
          margin-bottom: 16px;
          color: #6B7589;
          font-size: 12px;
          font-weight: 500;
          display: block;
        }

        :global(ul) {
          margin: 0;
          padding: 0;
          list-style: none;
          display: grid;
          gap: 16px;

          li {
            a {
              color: #6B7589;
              font-size: 14px;
              font-weight: 400;
              text-decoration: none;
              cursor: pointer;
              transition: color 0.2s;
              &:hover {
                color: #0019FE;
              }
              &.active {
                color: #0019FE;
                font-weight: 500;
              }
            }
          }
        }
      }
    }

    .content {
      padding: 0 20px;

      :global(h2) {
        margin: 0 0 16px;
        color: #0F172A;
        font-size: 36px;
        font-weight: 500;
        line-height: 44px;
        scroll-margin-top: 68px;
      }

      :global(h3) {
        margin: 0 0 16px;
        color: #0F172A;
        font-size: 28px;
        font-weight: 500;
        line-height: 36px;
      }

      :global(ul) {
        margin: 0 0 24px 18px;
        padding: 0;

        :global(li) {
          font-size: 18px;
          font-weight: 300;
          line-height: 32px;

          :global(a) {
            color: #0038FF;
            text-decoration-line: underline;
            text-decoration-thickness: from-font;
            text-underline-position: from-font;
          }
        }
      }

      :global(.table) {
        width: 100%;
        margin: 0 auto 24px;
        overflow: auto;
      }

      :global(table) {
        position: relative;
        margin: 0 auto;
        border-spacing: 0;
        white-space: nowrap;
        word-break: break-word;
        cursor: text;
        table-layout: fixed;
        border-collapse: initial;

        :global(tr) {
          :global(td),
          :global(th) {
            min-height: 38px;
            border-right: 1px solid #dee0e3;
            border-bottom: 1px solid #dee0e3;
            padding: 10px 16px;
            &:first-child {
              border-left: 1px solid #dee0e3;
            }
          }

          :global(th) {
            font-weight: 600;
            border-top: 1px solid #dee0e3;
          }
        }
      }

      :global(video) {
        width: 100%;
        border-radius: 20px;
        display: block;
      }

      :global(figcaption) {
        width: 100%;
        margin-top: -0.5em;
        margin-bottom: 40px;
        font-size: 16px;
        font-style: italic;
        text-align: center;
        display: block;

        :global(a) {
          text-decoration: none;
        }
      }

      :global(.note) {
        margin: 0 0 24px;
        padding: 16px;
        background: #F0F3FF;
        border-radius: 16px;
        border: 1px solid #0038FF;
        display: flex;
        gap: 16px;

        :global(.note-symbol) {
          line-height: 32px;
        }

        :global(p) {
          margin-bottom: 0;
        }
      }

      :global(.two-columns) {
        margin: 0 0 24px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        @media (max-width: 1024px) {
          grid-template-columns: 1fr;
        }

        :global(>div) {
          display: flex;
          flex-direction: column;
          gap: 20px;

          :global(a) {
            color: #0038FF;
            text-decoration-line: underline;
            text-decoration-thickness: from-font;
            text-underline-position: from-font;
          }
        }
      }

      :global(blockquote) {
        margin: 0 0 24px;
        padding-left: 16px;
        border-left: 4px solid #0038FF;

        :global(p) {
          margin-bottom: 0;
        }
      }

      :global(p) {
        margin: 0 0 24px;
        color: #0F172A;
        font-size: 18px;
        font-weight: 300;
        line-height: 32px;

        :global(img) {
          width: 100%;
          border-radius: 20px;
          border: 8px solid #F0F3FF;
          display: block;
        }

        :global(a) {
          color: #0038FF;
          font-size: 18px;
          font-weight: 300;
          line-height: 32px;
          text-decoration-line: underline;
          text-decoration-thickness: from-font;
          text-underline-position: from-font;
        }

        :global(strong) {
          font-weight: 600;
        }

        :global(code) {
          color: #0038FF;
          padding: 2px 4px;
          font-size: 16px;
          background: #F0F3FF;
          border-radius: 6px;
        }
      }
    }
  }
}
</style>

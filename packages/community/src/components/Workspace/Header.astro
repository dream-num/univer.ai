---
import { GithubSingle24 } from '@univerjs/icons'
import { getLangFromUrl, languages, useI18nUrl } from '@web/shared/i18n/utils'
import { Locale } from '@/components/Header/Locale/index'

// const isBlogPage = Astro.url.pathname.includes('blog')

const lang = getLangFromUrl(Astro.url)
const l = useI18nUrl(lang)

const currentPath = Astro.url.pathname.replace(`/${lang}`, '')
---

<header class="header">
  <nav class="nav">
    <div class="left">
      <a class="logo" href={l('/')}>
        <img src="/logo.svg" draggable={false} />
      </a>
    </div>

    <div class="right">
      <!-- <a
        class:list={['link', {
          active: !isBlogPage,
        }]}
        href="/workspace"
      >
        Univer Workspace
      </a>
      <a
        class:list={['link', {
          active: isBlogPage,
        }]}
        href="/workspace/blog"
      >
        Blog
      </a> -->
      <Locale client:load lang={languages[lang]} currentPath={currentPath} />

      <a class="github" href="https://github.com/dream-num/univer">
        <GithubSingle24 />
      </a>
      <a class="button" href={l('/workspace#contact-us')}>
        Join Waitlist
      </a>
    </div>
  </nav>
</header>

<style lang="less">
.header {
  position: sticky;
  top: 0;
  height: 68px;
  background: #FFF;
  border: 1px solid #ECEDED;
  box-shadow: 0px 4px 24px 0px rgba(31, 35, 39, 0.04);
  z-index: 1;

  .nav {
    max-width: 1440px;
    height: 100%;
    padding: 0 24px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;

    .left {
      .logo {
        img {
          display: block;
        }
      }
    }

    .right {
      display: flex;
      align-items: center;
      gap: 20px;

      .link {
        color: #0F172A;
        text-decoration: none;
        font-size: 16px;
        line-height: 2;
        &.active {
          background-image: linear-gradient(90deg, #5357ED 0%, #40B9FF 104.41%);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
        }
        @media (max-width: 1024px) {
          display: none;
        }
      }

      .github {
        color: #0F172A;
        :global(svg) {
          font-size: 32px;
        }
      }

      .button {
        height: 36px;
        padding: 0 24px;
        line-height: 36px;
        color: #f8f9fc;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        border-radius: 32px;
        background: linear-gradient(90deg, #5357ED 0%, #40B9FF 104.41%);
        display: block;
        &:hover {
          background: linear-gradient(90deg, #5357ed 0%, #5357ED 104.41%);
        }
      }
    }
  }
}
</style>

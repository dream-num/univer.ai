---
import '@univerjs/design/lib/index.css'
import 'modern-normalize'

interface Props {
  lang: string
  title: string
}

const { lang, title } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RCVZZ25ZP4"></script>
    <script type="module">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-RCVZZ25ZP4');
    </script>

    <meta charset="UTF-8" />
    <meta name="description" content="The next-generation open source office suite. Spreadsheets, documents, slides and more." />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#2F80ED" />
    <!-- og -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="The next-generation open source office suite. Spreadsheets, documents, slides and more." />
    <meta property="og:image" content="/og.png" />

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" href="https://univer.ai/zh-cn" hreflang="zh" />
    <link rel="alternate" href="https://univer.ai/ja-jp" hreflang="ja" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
:root {
  font-family: Inter, -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "noto sans", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
}

img {
  user-select: none;
}

hr {
  margin: 48px auto;
  width: 60%;
  border: 1px solid #999;
}
</style>

<script>
import { defaultTheme, themeInstance } from '@univerjs/design'

themeInstance.setTheme(document.body, defaultTheme);
</script>
